@{
    ViewBag.Title = "Home Page";
}

<style>
    #leftHalf {
        background: url('@Url.Content("~/Content/Images/Pizza.jpg")');
        width: 48%;
                position: absolute;
                left: 0px;
                height: 100%;
            }

#rightHalf {

            width: 52%;
        position: absolute;
        right: 0px;
        height: 100%;
    }

</style>
<div >
    <div id="leftHalf">
    </div>
    <div id="rightHalf">
        <div style="padding-top: 20px;">
            <input type="button" value="Create One Order" id="createOneRandomOrder" />
            <br />
            <input type="button" value="Clean Up DB" id="cleanUpDatabase" />
        </div>
    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {

        $('#createOneRandomOrder').click(function () {

            $.ajax({
                url: "home/createOneRandomOrder",
                type: "POST",
                cache: false,
                async: true,
                success: function (data) {
                    alert("New Order Generated: " + data.OrderReferenceId);
                }
            });
        });

        $('#cleanUpDatabase').click(function () {

            $.ajax({
                url: "home/cleanUpDatabase",
                type: "POST",
                cache: false,
                async: true,
                success: function (data) {
                    alert("DB Clean");
                },
                error: function (data) {
                    alert("Houston we have a problem....DB Clean");
                }
            });
        });

    });
</script>